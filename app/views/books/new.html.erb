<h2>Add a New Book</h2>
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <%= e %>
  <% end %>
<% end %>

<form action="/books" method='POST'>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <input type="text" name="book[title]" placeholder="Title"><br>
    <% if @authors%>
    <select name="author[existingname]" id="">
        <option value="" disabled selected>Select your option</option>
        <% @authors.each do |a| %>
        <option value="<%= a.id %>"><%= a.name %></option>
        <% end %>
    </select>
    <% end %>
    <input type="text" name="author[name]" placeholder="Author"><br>
    <label for="review[score]">Rating:</label>
    <input type="number" name='review[score]' min="1" max="5"><br>
    <textarea name="review[comment]" id="" cols="30" rows="10" placeholder="Enter Your Review!"></textarea><br>
    <input type="submit" value="Add a Book">
</form>
